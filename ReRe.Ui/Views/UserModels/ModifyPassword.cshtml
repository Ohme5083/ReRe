@{
    ViewData["Title"] = "Modifier mon mot de passe";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow p-4 rounded-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-3">@ViewData["Title"]</h2>
        <p class="text-center text-muted">Saisissez votre ancien mot de passe puis le nouveau.</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="ancienMotDePasse" class="form-label">Ancien mot de passe</label>
                <input name="ancienMotDePasse" type="password" class="form-control" id="ancienMotDePasse" required />
            </div>

            <div class="mb-3">
                <label for="nouveauMotDePasse" class="form-label">Nouveau mot de passe</label>
                <input name="nouveauMotDePasse" type="password" class="form-control" id="nouveauMotDePasse" required />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="AccountVue" class="btn btn-outline-secondary">Retour</a>
                <button type="submit" class="btn btn-danger">Valider</button>
            </div>
        </form>
    </div>
</div>
