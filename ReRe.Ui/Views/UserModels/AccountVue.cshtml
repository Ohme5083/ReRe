@{
    ViewData["Title"] = "Mon profil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
    <div></div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@ViewBag.Prenom @ViewBag.Nom</h5>

                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <span>Email</span>
                    <span class="fw-bold">@ViewBag.Email</span>
                </div>

                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <span>Modifier mot de passe</span>
                    <a asp-action="ModifyPassword" class="btn btn-sm btn-outline-warning d-flex align-items-center gap-1" title="Modifier mot de passe">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                </div>

                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <span>Supprimer mon compte</span>
                    <a asp-action="DeleteUser" class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1" title="Supprimer mon compte">
                        <i class="bi bi-trash"></i> Supprimer
                    </a>
                </div>

                <form asp-action="Logout" method="post" class="mt-auto">
                    <button type="submit" class="btn btn-outline-secondary w-100">Se déconnecter</button>
                </form>
            </div>
        </div>
    </div>
</div>
